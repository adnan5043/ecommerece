
<div class="container">
<p id="notice"><%= notice %></p>

<h1>Product Details</h1>


<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@product.price, precision: 2, strip_insignificant_zeros: true) %>
</p>

<p>
  <strong>Serial Number:</strong>
 <%= @product.serial_number %>
</p>

<div class="image-gallery">
  <% @images.each do |image| %>
    <% if image.image.present? %>
      <%= image_tag(image.image.url, class: 'product-image') %>
    <% else %>
      <p>No image available</p>
    <% end %>
  <% end %>
</div>
<div>
<% if user_signed_in? && current_user == @product.user %>
<%= link_to 'Edit', edit_product_path(@product) %>|
<td><%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<%end%>
</div>
<br>
<div class="d-flex">
  <%= form_for @order_item, remote: true do |f| %>
    <%= csrf_meta_tags %>
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.number_field :quantity, value: 1, main: 1 %>
    <%= f.submit "Add to Cart" %>
  <% end %>
</div>

<div id="card">
   <%= render 'cards/card' %>
</div>
<br>
<!-- <h2>Add a comment:</h2> -->
<%= render 'comments/form' %>

<h2>Comments</h2>
<%= render @product.comments %>


</div>
